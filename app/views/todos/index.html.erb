<h1>All Todos</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

  <% @todos.each_with_index do |todo, index| %>
    <tr>
      <td> <%= link_to "#{index + 1} #{todo.name}", todo_path(todo.id) %></td>
      <td> <%= "#{todo.description}" %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add A Todo', new_todo_path %> |
<%= link_to 'Home', root_path %>
